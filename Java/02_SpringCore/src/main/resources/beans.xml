<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="daoPelicula" class="modelo.persistencia.DaoPelicula"></bean>
	
	<bean id="gestorPelicula" class="modelo.negocio.GestorPelicula" autowire="byType"></bean>
	
	<bean id="director" class="modelo.entidades.Director" scope="prototype">
	<property name="nombre" value="George Lucas"></property>
	</bean>
	
	<bean id="pelicula" class="modelo.entidades.Pelicula" scope="prototype" autowire="byName"></bean>
</beans>
